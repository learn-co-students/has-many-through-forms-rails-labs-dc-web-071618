<%= form_for @post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br>

  <%= f.label :content %>
  <%= f.text_field :content %><br>

  <h4>Category</h4>
  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>

  <br></br>

  <%= f.fields_for :categories do |c| %>
    <%= c.label :name %>
    <%= c.text_field :name %>
  <% end %>

  <br></br>

  <%= f.submit %>
<% end %>
